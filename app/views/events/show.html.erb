<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
  <li><a href="/events/">My Events</a></li>
  <li class="active"><%= @event.event_name %></li>
</ol>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Basic Event Information</h3>
  </div>
  <div class="panel-body">
    <p>
      <strong>Event name:</strong>
      <%= @event.event_name %>
    </p>
    
    <p>
      <strong>Event country:</strong>
      <%= @event.event_country %>
    </p>
    
    <p>
      <strong>Event city:</strong>
      <%= @event.event_city %>
    </p>
    
    <p>
      <strong>Start date:</strong>
      <%= @event.start_date %>
    </p>
    
    <p>
      <strong>End date:</strong>
      <%= @event.end_date %>
    </p>
    
    <p>
      <strong>Event description:</strong>
      <%= @event.event_description %>
    </p>
    
    <p>
      <strong>Venue address:</strong>
      <%= @event.venue_address %>
    </p>
    
    <p>
      <strong>Event tickets:</strong>
      <%= link_to "Download File", @event.event_file_url %>
    </p>
    
    <p>
      <strong>Event type:</strong>
      <%= @event.event_type %>
    </p>
    
    <p>
      <strong>Additional details:</strong>
      <%= @event.additional_details %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Travel Information</h3>
      </div>
      <div class="panel-body">
        <p>
          <strong>Transport type:</strong>
          <%= @event.transport_type %>
        </p>
        
        <p>
          <strong>Transport name:</strong>
          <%= @event.transport_name %>
        </p>
        
        <p>
          <strong>Transport booking:</strong>
          <%= @event.transport_booking %>
        </p>
        
        <p>
          <strong>Transport phone:</strong>
          <%= @event.transport_phone %>
        </p>
        
        <p>
          <strong>Transport info:</strong>
          <%= @event.transport_info %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Basic Event Information</h3>
      </div>
      <div class="panel-body">
        <p>
          <strong>Hotel name:</strong>
          <%= @event.hotel_name %>
        </p>
        
        <p>
          <strong>Hotel reservation:</strong>
          <%= @event.hotel_reservation %>
        </p>
        
        <p>
          <strong>Hotel address:</strong>
          <%= @event.hotel_address %>
        </p>
        
        <p>
          <strong>Hotel phone:</strong>
          <%= @event.hotel_phone %>
        </p>
      </div>
  </div>
</div>


<%= link_to('Edit', edit_event_path(@event), :class => 'btn btn-large btn-primary')  %>

